<div style="text-align: center; padding: 20px;">
  <!-- Heading -->
  <h2 style="font-family: 'oregon-ldo-medium';
      background: #924c26;
      background: linear-gradient(to right, #924c26 0%, #ce875e 49%, #924c26 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent; font-size: 31px; text-align: center; letter-spacing: 2px; margin-top: 5px; margin-bottom: 20px; color: #333;">
    Personalised Diamond Engagement Rings
  </h2>

  <!-- Feature Section -->
  <div class="feature-section">
    <!-- Feature 1 -->
    <div class="feature-item">
      <img src="https://cdn.shopify.com/s/files/1/0843/6917/8903/files/4_2.png?v=1729078176" alt="1200+ Designs" />
      <p>Try 1200+ Designs</p>
    </div>

    <!-- Feature 2 -->
    <div class="feature-item">
      <img src="https://cdn.shopify.com/s/files/1/0843/6917/8903/files/icons8-rupee-50_1.png?v=1729075974" alt="9 Price" />
      <p>12 Price Options Per Design</p>
    </div>

    <!-- Feature 3 -->
    <div class="feature-item">
      <img src="https://cdn.shopify.com/s/files/1/0843/6917/8903/files/icons8-pen-64.png?v=17290801065" alt="Personalised Touch" />
      <p>Pick Your Personal Price</p>
    </div>

    <!-- Feature 4 -->
    <div class="feature-item">
      <img src="https://cdn.shopify.com/s/files/1/0843/6917/8903/files/icons8-checkmark-50.png?v=1729076074" alt="Perfect Fit" />
      <p>Personalise Your Ring</p>
    </div>
  </div> 

  <!-- Style -->
  <style>
    /* Default (Mobile) view */
    .feature-section {
      display: flex;
      flex-direction: column;
      align-items: flex-start;
      gap: 30px;
      width: 90%;
      max-width: 600px;
      margin: 0 auto;
    }

    .feature-item {
      display: flex;
      align-items: center;
      gap: 15px;
      background: #f0f0f0;
      padding: 10px;
      border-radius: 8px;
      box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1);
      width: 100%;
    }

    .feature-item img {
      width: 32px;
      height: 32px;
    }

    .feature-item p {
      font-size: 1.8rem;
      margin: 0;
      text-align: center;
      font-family: 'oregon-ldo-medium';
      white-space: nowrap; /* Prevents the text from breaking into a new line */
    }

    /* Desktop view - Adjust spacing to ensure even distribution */
    @media (min-width: 768px) {
      .feature-section {
        flex-direction: row;
        justify-content: space-between; /* Distribute space evenly between the features */
        align-items: center;
        max-width: 1200px;
        margin: 0 auto; /* Center the section */
        padding-left: 5%; /* Padding on the left */
        padding-right: 5%; /* Padding on the right */
      }

      .feature-item {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 15px;
        background: #f0f0f0;
        padding: 15px;
        border-radius: 8px;
        box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1);
        width: 250px; /* Adjust width to ensure all items fit evenly */
      }

      .feature-item img {
        width: 50px;
        height: 50px;
      }

      .feature-item p {
        font-size: 2rem; /* Adjust feature text size for desktop */
        white-space: nowrap; /* Prevents the text from breaking into a new line */
      }

      h2 {
        font-size: 40px; /* Increase title size for desktop */
      }
    }
  </style>
</div>




