{% schema %}
{
  "name": "Custom Multirow",
  "settings": [
    {
      "type": "image_picker",
      "id": "image_url",
      "label": "Image URL"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Yellow Gold"
    },
    {
      "type": "textarea",
      "id": "initial_text",
      "label": "Initial Text",
      "default": "Yellow gold is naturally yellow, but adding metals like silver, copper, nickel, and zinc enhances its warmth and durability."
    },
    {
      "type": "textarea",
      "id": "hidden_text",
      "label": "Hidden Text",
      "default": "While 24K gold is too soft for daily use, it is alloyed to increase strength. The carat indicates the amount of pure gold; higher purity offers richness but less durability. Yellow gold’s hue varies based on karat and alloy mix, ranging from champagne tones to vivid yellow. It suits most skin tones and provides a timeless, classic appeal."
    },
    {
      "type": "number",
      "id": "image_width",
      "label": "Image Width",
      "default": 600
    },
    {
      "type": "number",
      "id": "image_height",
      "label": "Image Height",
      "default": 400
    }
  ],
  "presets": [
    {
      "name": "Custom Multirow",
      "category": "Custom Sections"
    }
  ]
}
{% endschema %}
