</div>

<script>
  function toggleMobileReadMore() {
    const readMoreSection = event.target.previousElementSibling;
    const readMoreLink = event.target;

    if (readMoreSection.classList.contains('hidden')) {
      readMoreSection.classList.remove('hidden');
      readMoreLink.textContent = 'Read Less';
    } else {
      readMoreSection.classList.add('hidden');
      readMoreLink.textContent = 'Read More';
    }
  }
</script>

