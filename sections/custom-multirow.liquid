<div class="mobile-multirow custom-mobile-multirow section-{{ section.id }}-padding">
  <div class="mobile-multirow__inner page-width">
    
    <!-- Yellow Gold Section -->
    <div class="mobile-image-with-text isolate">
      <div class="mobile-image-with-text__grid grid grid--gapless grid--1-col grid--2-col-tablet">
        <!-- Image Section -->
        <div class="mobile-image-with-text__media-item mobile-image-with-text__media-item--medium grid__item">
          <div class="mobile-image-with-text__media">
            <img
              src="https://cdn.shopify.com/s/files/1/0843/6917/8903/files/mobile-yellow-gold-final.png?v=1738997608"
              alt="Yellow Gold"
              class="mobile-image-with-text__media--image"
              loading="lazy" 
            >
          </div>
        </div>

        {% assign alignment_class = '' %}
        {% if section.settings.some_value == 'condition' %}
          {% assign alignment_class = 'mobile-image-left' %}
        {% else %}
          {% assign alignment_class = 'mobile-image-right' %}
        {% endif %}

        <div class="mobile-image-with-text__grid grid grid--gapless grid--1-col grid--2-col-tablet {{ alignment_class }}">
          <!-- Content goes here -->
        </div>

        <!-- Text Section -->
        <div class="mobile-image-with-text__text-item grid__item">
          <div class="mobile-image-with-text__content content-container">
            <h2 class="mobile-image-with-text__heading heading-size rte">{{ section.settings.heading }}</h2>
            <p class="mobile-image-with-text__text rte">
              {{ section.settings.initial_text }}
              <span class="mobile-read-more-section hidden">
                {{ section.settings.hidden_text }}
              </span>
              <span class="mobile-read-more-link" onclick="toggleMobileReadMore()">Read More</span>
            </p>
          </div>
        </div>
      </div>
    </div>
    
    <!-- White Gold Section -->
