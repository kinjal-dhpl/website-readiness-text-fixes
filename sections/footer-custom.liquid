        "label": "Logo"
      },
      {
        "type": "image_picker",
        "id": "logo2",
        "label": "Logo 2"
      },
      {
        "type": "image_picker",
        "id": "logo3",
        "label": "Logo 3"
      },
      {
        "type": "image_picker",
        "id": "logo4",
        "label": "Logo 4"
      },
      {
        "type": "text",
        "id": "address_title",
        "label": "Address Title"
      },
      {
        "type": "richtext",
        "id": "address",
        "label": "Address"
      },
      {
        "type": "text",
        "id": "title_right",
        "label": "Title Right"
      },
      {
        "type": "richtext",
        "id": "content_right",
        "label": "Content Right"
      },
      {
        "type": "richtext",
        "id": "copyright",
        "label": "Copyright text"
      }
    ],
    "blocks": [
         {
            "name": "Add Footer Menu",
             "type": "row",
            "limit": 1,
             "settings":[{
                  "type": "link_list",
                  "id": "menu",
                  "label": "Menu"
                }
             ]
         },
