<!-- Shopify Section Settings -->
{% schema %}
{
  "name": "Custom Image Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "banner_image",
      "label": "Banner Image"
    },
    {
      "type": "text",
      "id": "banner_title",
      "label": "Title",
      "default": "Custom Engagement Ring"
    },
    {
      "type": "text",
      "id": "banner_text",
      "label": "Description",
      "default": "Book an Appointment to Build & Create Your Own Unique Engagement Ring!"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Book an Appointment"
    }
  ],
  "presets": [
    {
      "name": "Custom Image Banner"
    }
  ]
}
{% endschema %}
