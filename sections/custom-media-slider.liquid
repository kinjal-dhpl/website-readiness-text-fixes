{% schema %}
{
  "name": "Media Slider",
  "settings": [
    {
      "type": "text",
      "id": "video_url",
      "label": "Video URL",
      "default": "https://cdn.shopify.com/videos/c/o/v/7787da349d6c4a749a74ac1b0ca28388.mp4"
    },
    {
      "type": "text",
      "id": "video_heading",
      "label": "Video Heading",
      "default": "Understanding Your Personal Ring Style"
    },
    {
      "type": "text",
      "id": "video_bottom_text",
      "label": "Video Bottom Text",
      "default": "There's more to work than life."
    },
    {
      "type": "image_picker",
      "id": "image_1",
      "label": "First Image"
    },
    {
      "type": "text",
      "id": "image_1_heading",
      "label": "First Image Heading",
      "default": "Personal Style & Customisation"
    },
    {
      "type": "text",
      "id": "image_1_bottom_text",
      "label": "First Image Bottom Text",
      "default": "Choosing the right metal tone using Skin Colour Analysis"
    },
    {
      "type": "image_picker",
      "id": "image_2",
      "label": "Second Image"
    },
    {
      "type": "text",
      "id": "image_2_heading",
      "label": "Second Image Heading",
      "default": "Build Your Own Ring"
    },
    {
      "type": "text",
      "id": "image_2_bottom_text",
      "label": "Second Image Bottom Text",
      "default": "Solitaire Selection"
    },
    {
      "type": "image_picker",
      "id": "image_3",
      "label": "Third Image"
    },
    {
      "type": "text",
      "id": "image_3_heading",
      "label": "Third Image Heading",
      "default": "Understand Engagement Ring Design"
    },
    {
      "type": "text",
      "id": "image_3_bottom_text",
      "label": "Third Image Bottom Text",
      "default": "Learn about different engagement ring styles"
    },
    {
      "type": "image_picker",
      "id": "image_4",
      "label": "Fourth Image"
    },
    {
      "type": "text",
      "id": "image_4_heading",
      "label": "Fourth Image Heading",
      "default": "Find Your Perfect Ring"
