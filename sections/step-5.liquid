<script>
document.addEventListener('DOMContentLoaded', () => {
    const show1 = document.querySelector('.show-1');
    const show2 = document.querySelector('.show-2');
    const show3 = document.querySelector('.show-3');

    const tones = [document.querySelector('.tone-1'), document.querySelector('.tone-2'), document.querySelector('.tone-3')];
    let currentStep = 1;

    function showStep1() {
        show1.classList.add('visible');
        show1.classList.remove('hidden');
        show2.classList.add('hidden');
        show2.classList.remove('visible');
        show3.classList.add('hidden');
        show3.classList.remove('visible');

        tones[0].classList.add('tone-visible');
        tones[0].style.transform = 'scale(1.1)';

        setTimeout(() => {
            tones[0].style.transform = 'scale(1)';
            tones[0].classList.remove('tone-visible');

            setTimeout(() => {
                tones[1].classList.add('tone-visible');
                tones[1].style.transform = 'scale(1.1)';

                setTimeout(() => {
                    tones[1].style.transform = 'scale(1)';
                    tones[1].classList.remove('tone-visible');

                    setTimeout(() => {
                        tones[2].classList.add('tone-visible');
                        tones[2].style.transform = 'scale(1.1)';

                        setTimeout(() => {
                            tones[2].style.transform = 'scale(1)';
                            tones[2].classList.remove('tone-visible');

                            setTimeout(() => {
                                currentStep = 2;
                                showStep2();
                            }, 0);
                        }, 4000);
                    }, 0);
                }, 4000);
            }, 0);
        }, 4000);
    }

    function showStep2() {
        show1.classList.add('hidden');
        show1.classList.remove('visible');
        show2.classList.add('visible');
        show2.classList.remove('hidden');
        show3.classList.add('hidden');
        show3.classList.remove('visible');

        setTimeout(() => {
            currentStep = 3;
            showStep3();
        }, 4000); // Adjust this timeout as needed
    }

    function showStep3() {
        show1.classList.add('hidden');
        show1.classList.remove('visible');
        show2.classList.add('hidden');
        show2.classList.remove('visible');
        show3.classList.add('visible');
        show3.classList.remove('hidden');

        setTimeout(() => {
            currentStep = 1;
            showStep1();
        }, 4000); // Adjust this timeout as needed
    }

    // Initialize the first step
    showStep1();
});
</script>




